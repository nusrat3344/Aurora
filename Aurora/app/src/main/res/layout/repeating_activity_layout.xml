<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/grad_repeating"
    android:layout_height="match_parent">



    <ImageButton
        android:id="@+id/btn_sad"
        android:layout_width="106dp"
        android:layout_height="101dp"

        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="276dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#41FFFFFF"
        android:contentDescription="sad"
        android:scaleType="fitCenter"
        android:src="@drawable/sad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_angry"
        app:layout_constraintStart_toEndOf="@+id/btn_smile" />

    <ImageButton
        android:id="@+id/btn_smile"
        android:layout_width="106dp"
        android:layout_height="101dp"
        android:backgroundTint="#41FFFFFF"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="276dp"
        android:adjustViewBounds="true"
        android:contentDescription="smile_button"
        android:scaleType="fitCenter"
        android:src="@drawable/smiley"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btn_angry"
        android:layout_width="106dp"
        android:layout_height="101dp"
        android:backgroundTint="#41FFFFFF"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="276dp"
        android:adjustViewBounds="true"

        android:contentDescription="angry"
        android:scaleType="fitCenter"
        android:src="@drawable/angry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="369dp"
        android:layout_height="80dp"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/aref_ruqaa_bold"
        android:text="@string/how_was_your_day"
        android:textAlignment="center"
        android:textColor="#01052C"
        android:textSize="36sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


